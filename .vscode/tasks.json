{
    "version": "2.0.0",
    "tasks": [
        {
            // Compile Yarn Spinner protobuf file into .cs
            "label": "protobuf",
            "command": "protoc",
            "type": "process",
            "args": [
                "-I=${workspaceRoot}/YarnSpinner",
                "--csharp_out=${workspaceRoot}/YarnSpinner",
                "${workspaceRoot}/YarnSpinner/yarn_spinner.proto"
            ]
        },
        {
            "label": "build",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/YarnSpinner.Tests/YarnSpinner.Tests.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "publish",
            "command": "dotnet",
            "type": "process",
            "args": [
                "publish",
                "${workspaceFolder}/YarnSpinner.Tests/YarnSpinner.Tests.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "watch",
            "command": "dotnet",
            "type": "process",
            "args": [
                "watch",
                "run",
                "${workspaceFolder}/YarnSpinner.Tests/YarnSpinner.Tests.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        }
    ]
}
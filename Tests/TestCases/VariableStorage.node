// Tests variable storage.

<<set $foo to 1>>
<<assert($foo == 1)>>

<<set $foo to -1>>
<<assert($foo == -1)>>

<<set $foo to "foo">>
<<assert($foo == "foo")>>

<<set $foo to null>>
<<assert($foo == null)>>

// Test immediate value arithmetic

<<set $foo = 45>>
<<assert($foo == 45)>>

<<set $bar = $foo + 1>>
<<assert($bar == 46)>>

<<set $bar = $foo - 1>>
<<assert($bar == 44)>>

<<set $foo = 46>>
<<assert($foo == 46)>>

<<set $bar = $foo * 2>>
<<assert($bar == 92)>>

<<set $bar = $foo / 2>>
<<assert($bar == 23)>>

<<set $foo = 45>>
<<assert($foo == 45)>>

<<set $foo += 1>>
<<assert($foo == 46)>>

<<set $foo *= 2>>
<<assert($foo == 92)>>

<<set $foo /= 2>>
<<assert($foo == 46)>>

<<set $foo -= 1>>
<<assert($foo == 45)>>

// Test variable arithmetic

<<set $foo = 46>>
<<assert($foo == 46)>>

<<set $bar = 1>>
<<assert($bar == 1)>>

<<set $foobar = $foo + $bar>>
<<assert($foobar == 47)>>

<<set $bar = 2>>
<<assert($bar == 2)>>

<<set $foobar = $foo * $bar>>
<<assert($foobar == 92)>>

<<set $foobar = $foo / $bar>>
<<assert($foobar == 23)>>


